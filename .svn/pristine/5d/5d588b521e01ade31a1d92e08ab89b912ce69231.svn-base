									<text>{{ getPrice(watch.sellMoney, watch.sellCurrency) }}</text>
								</view>
								<view class="cs">利润：
									<text
										:style="{ color: watch.profit < 0 ? 'red' : '#999' }">{{ getPrice(watch.profit, "HKD") }}</text>
								</view>
							</view>
						</view>
